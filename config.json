def show_subscription_prompt(message):
    markup = types.ReplyKeyboardRemove()

    # إرسال صورة إرشادية إذا كانت موجودة
    if os.path.exists("payment_guide.png"):
        with open("payment_guide.png", "rb") as photo:
            bot.send_photo(message.chat.id, photo)

    # إرسال رسالة الاشتراك
    bot.send_message(
        message.chat.id,
        f"{config['subscription_message']}\n💰 السعر: {config['subscription_price']}$\n🏦 المحفظة: {config['wallet_address']}",
        reply_markup=markup
    )

    # طلب إرسال إثبات الدفع
    bot.send_message(message.chat.id, "📸 أرسل صورة إثبات الدفع:")
    bot.register_next_step_handler(message, handle_proof)
